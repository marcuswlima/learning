
FILE=$1

SRC=src/$FILE.cpp
BIN=obj/$FILE.sh
OBJ=obj/$FILE.o

echo " "
echo "******************************"
echo "** Criando compilados         "
echo "******************************"
echo " "

g++ -c $SRC -o $OBJ

echo " "
echo "******************************"
echo "** Linkando....               "
echo "******************************"
echo " "

g++ $OBJ -o $BIN

echo " "
echo "******************************"
echo "** Execução $1 " 
echo "******************************"
echo " "

$BIN

